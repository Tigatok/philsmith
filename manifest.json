{
  "manifest_version": 3,
  "name": "PhilSmith",
  "version": "0.1",
  "description": "Fills Shopify checkout forms with random data.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.myshopify.com/*", "*://checkout.shopify.com/*"],
      "js": ["content.js"]
    },
    {
      "matches": ["*://checkout.pci.shopifyinc.com/*"],
      "js": ["iframe_content.js"],
      "all_frames": true
    }
  ]
}
